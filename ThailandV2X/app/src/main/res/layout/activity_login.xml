<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_login_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/login_userName_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/edittext_cursor_bg"
            android:drawableLeft="@mipmap/icon_login_phone_1"
            android:drawablePadding="5dp"
            android:hint="@string/logining_userName_msg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/main_bg"
            android:textColorHint="@color/gray_hint"
            android:textSize="14sp" />

        <View style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:textCursorDrawable="@drawable/edittext_cursor_bg"
                android:drawableLeft="@mipmap/icon_login_password_1"
                android:drawablePadding="5dp"
                android:hint="@string/logining_psd_msg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/main_bg"
                android:textColorHint="@color/gray_hint"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/login_openPsd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:src="@mipmap/icon_login_psd_open" />
        </LinearLayout>

        <View style="@style/line" />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_selector_bg"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="@string/logining_login_msg"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/login_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/logining_register_msg"
                android:textColor="@color/main_bg"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/login_forgotPsd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/logining_forgot_psd_msg"
                android:textColor="@color/main_bg"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>